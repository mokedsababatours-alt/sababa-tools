// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          String    @default("user")   // "user" or "admin"
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Tools displayed on the portal grid
model Tool {
  id          String   @id @default(cuid())
  slug        String   @unique
  labelHe     String                        // Hebrew label
  labelEn     String                        // English label (for dev reference)
  icon        String                        // emoji or icon name
  description String   @default("")
  type        String   @default("link")     // "link" | "embed" | "chat"
  url         String   @default("")         // external URL for link/embed tools
  webhookEnv  String   @default("")         // env var name for chat tools e.g. "N8N_WEBHOOK_MARKETING"
  color       String   @default("default")  // tile accent color
  portal      String   @default("both")     // "team" | "admin" | "both"
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
